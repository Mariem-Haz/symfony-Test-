{% extends 'base.html.twig' %}

{% block body %}

<div class="example-wrapper">
    <h1>Article</h1>

    <div class="row mb-2">
        {% for article in articles %}
            <!-- Liste des articles du blog -- DEBUT -->
            <div class="col-md-6">
                <div class="card flex-md-row mb-4 box-shadow h-md-250">
                    <div class="card-body d-flex flex-column align-items-start">
                        <h3 class="mb-0">
                            <a class="text-dark" href="#">{{article.titre}}</a>
                        </h3>
                        <div class="mb-1 text-muted">{{article.dateCreation | date('d/m/y')}}</div>
                        <a href="{{path('show_article',{'id':article.id})}}">Lire la suite</a>
                    </div>
                    <img class="card-img-right flex-auto d-none d-md-block" src="{{article.photo}}"
                        alt="Card image cap">
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}